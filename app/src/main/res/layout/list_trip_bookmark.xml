<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Widget.MaterialComponents.CardView"
    style="?attr/materialCardViewStyle"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_bookmark_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/german"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/list_bookmark_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="location"
            android:textSize="30dp"
            android:textColor="@color/colorMyPageTitleText"/>

        <TextView
            android:id="@+id/list_bookmark_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="url"
            android:textSize="20dp"
            android:textColor="@color/colorMyPageTitleText"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>