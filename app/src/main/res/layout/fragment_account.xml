<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccountGrey">

    <ImageButton
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorAccountGrey"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="로그인하고 여행 계획하기"
        android:textStyle="bold"
        android:textColor="@color/colorMyPageTitleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_setting" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:theme="@style/Theme.MaterialComponents"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:backgroundTint="@color/colorPrimary"
        android:text="로그인/회원가입"
        android:textSize="14dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/btn_reservation_search"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reservation_search"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:theme="@style/Theme.MaterialComponents"
        android:text="예약 검색"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_login"
        app:layout_constraintTop_toTopOf="@+id/btn_login"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp"/>

    <Button
        android:id="@+id/btn_discountcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_discountbox"
        android:drawableTop="@drawable/ic_more_horiz"
        android:text="할인코드"
        android:textColor="@color/colorMyPageTitleText"
        android:padding="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_tripcoin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <Button
        android:id="@+id/btn_tripcoin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_coinbox"
        android:drawableTop="@drawable/ic_more_horiz"
        android:text="트립코인"
        android:padding="15dp"
        android:textColor="@color/colorMyPageTitleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_discountcode"
        app:layout_constraintTop_toTopOf="@+id/btn_discountcode" />

    <LinearLayout
        android:id="@+id/btn_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_discountcode">

        <Button
            android:id="@+id/btn_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorWhite"
            android:text="즐겨찾기"
            android:textColor="@color/colorMyPageTitleText"
            android:drawableLeft="@drawable/ic_favorite_border"
            android:drawablePadding="10dp"
            android:gravity="center|left" />

        <Button
            android:id="@+id/btn_storage_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_credit_card"
            android:drawablePadding="10dp"
            android:text="저장카드 정보"
            android:textColor="@color/colorMyPageTitleText"
            android:gravity="left|center"
            app:layout_constraintBottom_toTopOf="@+id/btn_traveler_info"
            app:layout_constraintStart_toStartOf="@+id/btn_traveler_info"
            app:layout_constraintTop_toBottomOf="@+id/btn_favorite" />

        <Button
            android:id="@+id/btn_traveler_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_person_outline"
            android:drawablePadding="10dp"
            android:text="여행자 정보"
            android:textColor="@color/colorMyPageTitleText"
            android:gravity="left|center" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/btn_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_container1">

        <Button
            android:id="@+id/btn_service_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_headset_mic"
            android:drawablePadding="10dp"
            android:text="고객센터"
            android:textColor="@color/colorMyPageTitleText"
            android:gravity="left|center" />

        <Button
            android:id="@+id/btn_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_error_outline"
            android:drawablePadding="10dp"
            android:text="트립닷컴 소개"
            android:textColor="@color/colorMyPageTitleText"
            android:gravity="left|center"
            app:layout_constraintStart_toStartOf="@+id/btn_service_center"
            app:layout_constraintTop_toBottomOf="@+id/btn_service_center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_container3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_container2"
        app:layout_constraintBottom_toBottomOf="parent">

    <Button
            android:id="@+id/btn_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/ic_mood"
            android:drawablePadding="10dp"
            android:text="트립닷컴 리워드"
            android:textColor="@color/colorMyPageTitleText"
            android:gravity="left|center"/>

        <Button
            android:id="@+id/btn_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:text="친구 초대하면 최대 10만원 할인"
            android:textColor="@color/colorMyPageTitleText"
            app:layout_constraintTop_toBottomOf="@+id/btn_reward" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>