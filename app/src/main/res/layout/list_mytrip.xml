<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Widget.MaterialComponents.CardView"
    style="?attr/materialCardViewStyle"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/list_trip_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/list_trip_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="city"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/list_trip_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="url"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/list_trip_favorite"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:src="@drawable/selector_bookmark_city"
        android:clickable="true"/>
</com.google.android.material.card.MaterialCardView>